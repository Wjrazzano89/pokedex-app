let pokemonRepository=function(){let t=$("#pokemonDetails"),n=[];function o(t){"object"==typeof t&&"name"in t&&"detailsUrl"in t?n.push(t):console.log("pokemon is not correct")}function e(){return n}function i(n){return fetch(n.detailsUrl).then(t=>t.json()).then(function(o){var e;let i,l,a,r;n.imageUrl=o.sprites.front_default,n.height=o.height,e=n,i=t.find(".modal-title"),l=t.find(".modal-body"),a=$('<img class="img-fluid mb-2">').attr("src",e.imageUrl),r=$("<p></p>").text("Height: "+e.height+"m"),i.text(e.name),l.empty(),l.append(a),l.append(r),t.modal("show")}).catch(function(t){console.error("Error fetching Pokemon details:",t)})}function l(t){i(t)}return{add:o,getAll:e,addListItem:function t(n){let o=$(".pokemon-list"),e=$('<li class="row mb-2"></li>'),l=$('<div class="col-2"></div>'),a=$('<button class="btn btn-success btn-block"></button>').text(n.name);l.append(a),e.append(l),o.append(e),a.on("click",function(){var t;t=n,i(t)})},loadList:function t(){return fetch("https://pokeapi.co/api/v2/pokemon/?limit=15").then(t=>t.json()).then(function(t){t.results.forEach(function(t){o({name:t.name,detailsUrl:t.url})})}).catch(function(t){console.error("Error fetching Pokemon list:",t)})},loadDetails:i,showDetails:l}}();pokemonRepository.loadList().then(function(){pokemonRepository.getAll().forEach(function(t){pokemonRepository.addListItem(t)})});
